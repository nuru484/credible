<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/index.css" />
    <title>Login</title>
  </head>
  <body>
    <h1>Student LogIn</h1>

    <% if (errors && errors.length > 0) { %>
    <ul>
      <% errors.forEach(function(error) { %>
      <li style="color: red"><%= error.message %></li>
      <% if (error.sound) { %>
      <audio id="errorSound" src="/sound/alert.mp3"></audio>
      <% } %> <% }); %>
    </ul>
    <% } %>

    <form action="/userLogin" method="POST">
      <div>
        <label for="identifier">Name or Index Number</label>
        <input
          id="identifier"
          name="username"
          placeholder="Enter your name or index number"
          type="text"
          class="identifier"
          required
        />
      </div>
      <button type="submit">Log In</button>
    </form>

    <script>
      document.addEventListener('DOMContentLoaded', function () {
        if (document.getElementById('errorSound')) {
          document.getElementById('errorSound').play();
        }
      });
    </script>
  </body>
</html>
